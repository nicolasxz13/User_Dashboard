@using User_Dashboard.Models
@model UserDTO

<div class="userform">
    <h2>Login in</h2>
    <form asp-action="Login_in" asp-controller="Login">
        <div class="block">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email">
        </div>
        <div class="block">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="block">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password">
        </div>
        <div class="block">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="block">
            <button type="submit" class="btn1">Login</button>
        </div>
    </form>
    <div>
        <a asp-action="Register" asp-controller="Login">Don't have an account? Register.</a>
    </div>
</div>
